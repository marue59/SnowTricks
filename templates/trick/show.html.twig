{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block content %}
<div class="container text-center">
    {% if app.user %}
    <div class="col-12">
        <a href="{{ path('trick_new') }}" class="btn btn-dark mb-2">Créer une nouvelle figure</a>
    </div>  
    {% endif %}
    <div class="col-12 text-center">
        <div class="card">
            {% if trick.picture is not empty%}
            <img src="/images/picture_upload/{{ trick.picture.first.path }}">
            {% else %}
            <img src="https://via.placeholder.com/250x150">
            {% endif %}
            <div class="card-img-overlay">
                {% if app.user %}
                <div class="d-flex flex-row justify-content-end">
                    <a href="{{ path('trick_edit', {'slug': trick.slug}) }}"><img class="mt-2" src="{{ asset('images/edit.svg') }}"></a>
                    {{ include('trick/_delete_form.html.twig') }}
                </div>
                {% endif %}
                <h4 class="card-title text-white">{{ trick.name }}</h4>   
            </div>  
        </div>
        <div class="d-none d-sm-block d-md-none">
            <button class="buttonloadMedia">
                <i class="fa fa-spinner fa-spin"></i>Voir plus
            </button> 
        </div>
        <div class="d-flex flex-row"> 
            {% for picture in trick.picture %}
            <div class="{{ loop.index > 10 ? 'd-none' : null}}" style="flex: 1 1 160px;">
                <div class="mx-auto"> 
                    <img src="/images/picture_upload/{{ picture.path }}" class="m-1" width="300px" height="150px">
                </div>
            {% endfor %}
            {% for video in trick.video %}
                <div class="ratio-1x1 mx-auto">
                    <iframe src="https://youtube.com/embed/{{ video.url }}" title="YouTube video"></iframe>
                </div>
            {% endfor %}
            </div>
        </div>
        <div class="card-body text-center">
            <p class="card-text text-justify">{{ trick.text }}</p>
        </div>
        <div class="d-flex flex-wrap justify-content-center">  
            <p class="card-text mt-1 p-2">Créer le : {{ trick.createdAt ? trick.createdAt|date('d-m-Y H:i') : '' }}</p>                        
                {% if trick.updateAt is not empty %}
                    <p class="card-text mt-1 text-end">Modifié le : {{ trick.updateAt ? trick.updateAt|date('Y-m-d H:i:s') : '' }}</p> 
                {% endif %}   
            <p class="card-text mt-1 p-2">
                 Catégorie : {{ trick.category.name }}
            </p>
        </div>
        <div class="bg-light">
            {%  if app.user %}
                <h3 class="text-justify m-4">Laissez nous votre avis : </h3>                        
                {{ render(path('comment_new', {id : trick.id})) }}
            {% else %}
                <p class="card-text text-center m-3">Pour laisser un commentaire vous devez vous connecter</p> 
            {% endif %}
        </div>
        {% if trick.comments is not empty%}
        {% for comment in trick.comments %} 
        <div class="m-1{{ loop.index > 2 ? 'd-none' : null}}">
            <div class="row g-0">
                <div class="col-2">
                    <img src="https://eu.ui-avatars.com/api/?name={{comment.user.fullName}}" class="img-fluid rounded-start" alt="...">
                    <div>
                    {{comment.user.fullName}}
                    </div>
                </div>
                <div class="card col-10 mb-2" style="max-width: 840px;">
                    <div class="card-body">
                        <p class="card-text text-justify">{{ comment.text }}</p> 
                        <p class="card-text text-end"><small class="text-muted">Posté le : {{ comment.createAt| date("d/m/Y") }}</small></p>
                    </div>
                </div>
            </div>
        </div> 
        {% endfor %}
        {% endif %}
        <div class="text-center">
            <button class="buttonloadComment btn btn-secondary m-3">
                <i class="fa fa-spinner fa-spin"></i>Voir plus
            </button> 
        </div>
    </div>
</div> 
{% endblock %}
{% block javascripts %}  
    <script type="text/javascript">
        $(function () { 
            $('.buttonloadComment').on('click', function (e) { 
                e.preventDefault(); 
                let $cards = $('.d-none').slice(0, 2);
                if ($cards.length === 0) { 
                    $('.buttonloadComment').remove(); 
                } 
                $cards.each(function (x) { 
                    $(this).removeClass('d-none') 
                }) 
            })
        })
    </script>
{% endblock %}