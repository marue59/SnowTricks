{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
{{ form_start(registrationForm) }}  
<div class="container col-lg-6 col-md-12 col-sm-12">
    <h1 class="text-center mt-3">Inscription</h1>
    <div class="d-flex flex-column justify-content-center p-3">

      <div class="form-control">
        <div class="form-group">  
          {{ form_widget(registrationForm.fullname, { 'attr':{'class': 'form-control mt-3 mb-3', 'label': 'Votre nom'} }) }}  
        </div> 
        <div class="form-group">
          {{ form_widget(registrationForm.email, { 'attr':{'class': 'form-control mt-3 mb-3', 'label': 'Votre email'} }) }} 
        </div> 
        <div class="form-group">
          {{ form_widget(registrationForm.plainPassword, { 'attr':{'class': 'form-control mt-3 mb-3', 'label': 'Votre mot de passe'} }) }} 
        </div>  
        <div class="form-group">
          {{ form_row(registrationForm._token) }}  
        </div>  
        <div class="d-flex flex-column justify-content-center m-4"> 
          <button class="btn btn-dark">Cr√©er un compte</button> 
          <a class="text-center mt-2" href="{{ path('app_login') }}">Inscription</a>
        </div> 
      </div> 
    </div>
  </div>  
{{ form_end(registrationForm) }}
{% endblock %}