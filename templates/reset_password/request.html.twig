{% extends 'base.html.twig' %}

{% block title %}Mot de passe oubli√©{% endblock %}

{% block body %}
<div class="container">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1 class="text-center mt-3">Mot de passe perdu</h1>
        <div class="form-control text-center">
            <div class="m-3">
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email, { 'attr':{'class': 'form-control m-3', 'label': 'Votre mot de passe'} }) }} 
            </div>  
            <a href="{{ path('app_forgot_password_request') }}" class="btn btn-primary m-2">Changer de mot de passe</a>
            {{ form_end(requestForm) }}   
        </div>       
</div>  
{% endblock %}
