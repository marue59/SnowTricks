<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Snow Tricks{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.svg') }}" />

        {% block stylesheets %}
        <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>

    {% block header %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid ">
            <a class="navbar-brand" href="#">
                <img src="{{ asset('images/logoSnowTricks.png') }}" alt="" width="250" height="50">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarScroll">
                <ul class="navbar-nav mr-5 ">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home<span class="sr-only"></span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="{{ path('home') }}">Tricks</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}" class="btn btn-dark m-2">Deconnexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    {% endblock %}

    {% block content %} 
    {% endblock %}

    {% block footer %}
        <div class="d-md-none d-xl-none d-sm-block">
            <div class="fixed-bottom bg-light">
                <div class="d-flex flex-row justify-content-around m-2" >
                    <a href="{{ path('home') }}" target="_blank" title="home">
                        <img class="" src="{{ asset('images/footer/maison.svg') }}" alt="home" />
                    </a>
                    <a href="{{ path('home') }}" target="_blank" title="tricks">
                        <img class="" src="{{ asset('images/footer/drapeau.svg') }}" alt="tricks" />
                    </a>
                    {% if app.user %} 
                    <a href="{{ path('app_logout') }}" target="_blank" title="logout">
                        <img class="" src="{{ asset('images/footer/fleche_back.svg') }}" alt="logout" />
                    </a>  
                    {% else %}
                    <a href="{{ path('app_login') }}" target="_blank" title="login">
                        <img class="" src="{{ asset('images/footer/logout.svg') }}" alt="login" />
                    </a> 
                    {% endif %}
                </div>
            </div>
        </div>
    {% endblock %}
    
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    {% block javascripts %}  
    {% endblock %}
    </body>
</html>